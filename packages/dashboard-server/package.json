{
  "name": "@agent-relay/dashboard-server",
  "version": "2.0.20",
  "description": "Express server for Agent Relay dashboard - serves UI and proxies to relay daemon",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "relay-dashboard-server": "./dist/start.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "tsx watch start.ts -p 3889",
    "dev:mock": "tsx watch start.ts -p 3889 --mock --verbose",
    "build": "tsc",
    "start": "node dist/start.js",
    "start:mock": "node dist/start.js --mock",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "express": "^5.2.1",
    "http-proxy-middleware": "^3.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22.19.3",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AgentWorkforce/relay-dashboard.git",
    "directory": "packages/dashboard-server"
  },
  "keywords": [
    "agent-relay",
    "dashboard-server",
    "express",
    "proxy"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
